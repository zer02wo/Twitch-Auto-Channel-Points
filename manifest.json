{
    "manifest_version": 3,
    "name": "Twitch Channel Points+",
    "short_name": "TTV Points+",
    "version": "1.0.0",
    "description": "Automatically redeem channel points on any live Twitch stream. Keep track of the points you earn across all Twitch channels, including predictions!",

    "icons": {
        "16": "images/icon16.png",
        "32": "images/grey-icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

    "action": {
        "default_title": "Twitch Channel Points+"
    },

    "permissions": ["storage", "tabs", "declarativeContent"],

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["*://www.twitch.tv/*"],
            "js": ["js/channel-points.js"],
            "run_at": "document_end"
        }
    ]
}
